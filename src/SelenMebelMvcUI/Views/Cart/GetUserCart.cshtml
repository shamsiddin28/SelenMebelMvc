@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:90%; margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Furniture</th>
                <th>Image</th>
                <th>Category</th>
                <th>Unit Price(INR)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach(var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Furniture.Name</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.Furniture.Image))
                        {
                            <img src="/furniture images/NoImage.png" style="width:80px;height:100px"/>
                        }
                        else
                        {
                            <img src="/furniture images/@item.Furniture.Image" style="width:80px;height:100px"/>
                        }
                    </td>
                    <td>@item.Furniture.TypeOfFurniture.Category.Name</td>
                    <td>@item.Furniture.Price X @item.Quantity</td>
                    <td>@(item.Furniture.Price * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/Cart/AddItem?bookId=@item.FurnitureId&&redirect=1">+</a>
                        <a class="btn btn-info" href="cart/removeitem?furnitureId=@item.FurnitureId">-</a>
                    </td>
                </tr>
            }    
        </table>

        <div class="my-2">
            <h5>Total(INR): </h5>
            @(Model.CartDetails.Select(item => item.Furniture.Price * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a>
        </div>
    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>
