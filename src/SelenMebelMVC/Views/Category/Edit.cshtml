@using SelenMebel.Service.DTOs.Categories;
@model CategoryForResultDto
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Category</h2>

        @if (Model is null)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.Message</strong>
                <button type="button" class="btn-close" data-ds-dismiss='alert' aria-label="Close"></button>
            </div>
        }
        else if (Model is not null)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.Message</strong>
                <button type="button" class="btn-close" data-ds-dismiss='alert' aria-label="Close"></button>
            </div>
        }

        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="Id" class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input asp-for="Id" class="form-control"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Image">Old Image</label>
                <div class="col-sm-8">
                    <img src="~/CategoryImages/Images/@Model.Image" alt="" width=100 />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Image">New Image</label>
                <div class="col-sm-8">
                    <input class="form-control" type="file" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Category/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
