@using SelenMebel.Service.DTOs.FurnitureFeatures;

@model FurnitureFeatureForCreationDto
@{
    ViewData["Title"] = "Create FurnitureFeature";
}

@if (TempData["InfoMessage"] != null)
{
    <div class='alert alert-info alert-dismissible fade show' role='alert'>
        <strong>Information ! </strong> @TempData["InfoMessage"]
        <button type="button" class="close" data-ds-dismiss='alert' aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>Success ! </strong> @TempData["SuccessMessage"]
        <button type="button" class="close" data-ds-dismiss='alert' aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class='alert alert-danger alert-dismissible fade show' role='alert'>
        <strong>Error ! </strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-ds-dismiss='alert' aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">@ViewData["Title"]</h2>
        <form method="post" asp-action="CreateFurnitureFeature" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="FurnitureId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="FurnitureId" class="form-control" required value="@ViewBag.FurnitureId" />
                    <span asp-validation-for="FurnitureId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3 d-flex">
                <div class="col-sm-6">
                    <label asp-for="Name" class="col-form-label"></label>
                    <div>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Value" class="col-form-label"></label>
                    <div>
                        <input asp-for="Value" class="form-control" required />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Furniture/Details/@ViewBag.FurnitureId" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}